# Polymarket Authentication
PK=your_private_key_here
BROWSER_ADDRESS=your_wallet_address_here

# Google Sheets (for data_updater)
SPREADSHEET_URL=https://docs.google.com/spreadsheets/d/your_sheet_id/edit
# Replace with YOUR spreadsheet url

# PIA VPN (for Docker deployment)
# Your regular PIA credentials (p-number and password)
PIA_USER=p1234567
PIA_PASS=your_pia_password
# Your Dedicated IP token (from PIA account) - for dedicated IP mode
PIA_DIP_TOKEN=DIPxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Regular PIA region (for 'pia' mode) - set with: ./bot.sh vpn region "US Texas"
PIA_REGION=US Texas

# Rate Limiting (requests per second)
# These are set to ~50% of official Polymarket limits for safety margin
# Official limits: BOOK=20, ORDER=240, CANCEL=20, DATA_API=20, GENERAL=500
RATE_LIMIT_BOOK=10
RATE_LIMIT_ORDER=80
RATE_LIMIT_CANCEL=8
RATE_LIMIT_DATA_API=10
RATE_LIMIT_GENERAL=50

# Rate Limiting Burst Sizes (max tokens in bucket)
# Optional - defaults are 1.5x the per-second rate
# RATE_LIMIT_BOOK_BURST=15
# RATE_LIMIT_ORDER_BURST=120
# RATE_LIMIT_CANCEL_BURST=12
# RATE_LIMIT_DATA_API_BURST=15
# RATE_LIMIT_GENERAL_BURST=75

# Circuit Breaker (pauses all requests after repeated 429s)
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_PAUSE=30

# Concurrency Control
# Maximum number of concurrent perform_trade() tasks
# With thread pool for blocking calls, can safely increase this
MAX_CONCURRENT_TRADES=10

# Thread pool for blocking API calls (prevents event loop starvation)
# Each thread handles one blocking HTTP request/rate limiter wait
API_THREAD_POOL_SIZE=10

# WebSocket Event Debouncing (milliseconds)
# Prevents flooding trades on rapid price updates
TRADE_DEBOUNCE_MS=300
